pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                echo 'Tool: Maven'
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running Unit and Integration Tests...'
                echo 'Tools: Maven and JUnit'
            }
            post {
                success {
                    emailext(
                        to: "inaambajawray@gmail.com",
                        subject: "Unit and Integration Tests - Build Successful",
                        body: """
                        Build was successful!
                        Build status: ${currentBuild.currentResult}
                        Check console output to see logs at: ${env.BUILD_URL}
                        """,
                        attachmentsPattern: '**/build.log'
                    )
                }
                failure {
                    emailext(
                        to: "inaambajawray@gmail.com",
                        subject: "Unit and Integration Tests - Build Failed",
                        body: """
                        Build was not successful...
                        Build status: ${currentBuild.currentResult}
                        Check console output to see logs at: ${env.BUILD_URL}
                        """,
                        attachmentsPattern: '**/build.log'
                    )
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                echo 'Performing Code Analysis...'
                echo 'Tool: SonarQube'
            }
        }
        
        stage('Security Scan') {
            steps {
                echo 'Performing Security Scan...'
                echo 'Tool: OWASP Dependency-Check'
            }
            post {
                success {
                    emailext(
                        to: "inaambajawray@gmail.com",
                        subject: "Security Scan - Successful",
                        body: """
                        Security scan was successful!
                        Security scan status: ${currentBuild.currentResult}
                        Check console output to see logs at: ${env.BUILD_URL}
                        """,
                        attachmentsPattern: '**/build.log'
                    )
                }
                failure {
                    emailext(
                        to: "inaambajawray@gmail.com",
                        subject: "Security Scan - Failed",
                        body: """
                        Security scan was not successful...
                        Security scan status: ${currentBuild.currentResult}
                        Check console output to see logs at: ${env.BUILD_URL}
                        """,
                        attachmentsPattern: '**/build.log'
                    )
                }
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to Staging Server AWS...'
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Tests on Staging...'
                echo 'Tool: Maven'
            }
        }
        
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to Production Server AWS...'
            }
        }
    }
}
