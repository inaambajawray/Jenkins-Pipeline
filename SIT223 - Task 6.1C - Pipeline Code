pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                echo 'Tool: Maven'
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running Unit and Integration Tests...'
                echo 'Tools: Maven and JUnit'
            }
            post {
                success {
                    mail to: "inaambajawray@gmail.com",
                    subject: "Build Status Email",
                    body: "Build was successful!"
                }
                failure {
                    mail to: "inaambajawray@gmail.com",
                    subject: "Build Status Email",
                    body: "Build was not successful..."
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                echo 'Performing Code Analysis...'
                echo 'Tool: SonarQube'
            }
        }
        
        stage('Security Scan') {
            steps {
                echo 'Performing Security Scan...'
                echo 'Tool: OWASP Dependency-Check'
            }
            post {
                success {
                    mail to: "inaambajawray@gmail.com",
                    subject: "Secrutiy Scan Status Email",
                    body: "Security scan was successful!"
                }
                failure {
                    mail to: "inaambajawray@gmail.com",
                    subject: "Security Scan Status Email",
                    body: "Security scan was not successful..."
                }
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to Staging Server AWS...'
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Tests on Staging...'
                echo 'Tool: Maven'
            }
        }
        
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to Production Server AWS...'
            }
        }
    }
}
