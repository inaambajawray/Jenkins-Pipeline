pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                echo 'Tool: Maven'
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running Unit and Integration Tests...'
                echo 'Tools: Maven and JUnit'
            }
            post {
                success {
                    // Save the logs to a file for attachment
                    script {
                        sh "echo 'Unit and Integration Test Logs:' > build_logs.txt"
                        sh "cat ${env.WORKSPACE}/target/surefire-reports/*.txt >> build_logs.txt" // Example path, adjust to your actual log location
                    }
                    emailext(
                        to: "inaambajawray@gmail.com",
                        subject: "Unit and Integration Tests - Build Successful",
                        body: """
                        Build status: ${currentBuild.currentResult}
                        """,
                        attachmentsPattern: 'build_logs.txt'
                    )
                }
                failure {
                    // Save the logs to a file for attachment
                    script {
                        sh "echo 'Unit and Integration Test Logs (Failure):' > build_logs.txt"
                        sh "cat ${env.WORKSPACE}/target/surefire-reports/*.txt >> build_logs.txt"
                    }
                    emailext(
                        to: "inaambajawray@gmail.com",
                        subject: "Unit and Integration Tests - Build Failed",
                        body: """
                        Build status: ${currentBuild.currentResult}
                        """,
                        attachmentsPattern: 'build_logs.txt'
                    )
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                echo 'Performing Code Analysis...'
                echo 'Tool: SonarQube'
            }
        }
        
        stage('Security Scan') {
            steps {
                echo 'Performing Security Scan...'
                echo 'Tool: OWASP Dependency-Check'
            }
            post {
                success {
                    // Save the logs to a file for attachment
                    script {
                        sh "echo 'Security Scan Logs:' > build_logs.txt"
                        sh "cat ${env.WORKSPACE}/path_to_security_scan_logs.log >> build_logs.txt" // Adjust log path
                    }
                    emailext(
                        to: "inaambajawray@gmail.com",
                        subject: "Security Scan - Successful",
                        body: """
                        Security scan status: ${currentBuild.currentResult}
                        """,
                        attachmentsPattern: 'build_logs.txt'
                    )
                }
                failure {
                    // Save the logs to a file for attachment
                    script {
                        sh "echo 'Security Scan Logs (Failure):' > build_logs.txt"
                        sh "cat ${env.WORKSPACE}/path_to_security_scan_logs.log >> build_logs.txt"
                    }
                    emailext(
                        to: "inaambajawray@gmail.com",
                        subject: "Security Scan - Failed",
                        body: """
                        Security scan status: ${currentBuild.currentResult}
                        """,
                        attachmentsPattern: 'build_logs.txt'
                    )
                }
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to Staging Server AWS...'
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Tests on Staging...'
                echo 'Tool: Maven'
            }
        }
        
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to Production Server AWS...'
            }
        }
    }
}
